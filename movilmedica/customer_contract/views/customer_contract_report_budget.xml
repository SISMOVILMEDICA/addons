<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="customer_contract_report_budget_form" model="ir.ui.view">
            <field name="name">customer.contract.report.budget.form</field>
            <field name="model">customer.contract.report.budget</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_general" col="4">
                            <field name="name" />
                            <field name="amount" />
                            <field name="file" />
                            <span class="o_form_label o_td_label" name="write_uid">Modificador</span>
                            <div name="div_write_uid">
                                <field name="write_uid" />
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_contract_report_budget_tree" model="ir.ui.view">
            <field name="name">customer.contract.report.budget.tree</field>
            <field name="model">customer.contract.report.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="amount" />
                </tree>
            </field>
        </record>

    </data>
</odoo>

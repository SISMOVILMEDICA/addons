<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="customer_contract_policy_form" model="ir.ui.view">
            <field name="name">customer.contract.policy.form</field>
            <field name="model">customer.contract.policy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_general" col="4">
                            <field name="description" />
                            <field name="number" />
                            <field name="amount" />
                            <field name="rate" />
                            <field name="expedition_date" />
                            <field name="effective_date" />
                            <field name="file" />
                            <field name="receipt" />
                            <field name="partner_id" />
                            <span class="o_form_label o_td_label" name="write_uid">Modificador</span>
                            <div name="div_write_uid">
                                <field name="write_uid" />
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_contract_policy_tree" model="ir.ui.view">
            <field name="name">customer.contract.policy.tree</field>
            <field name="model">customer.contract.policy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="description" />
                    <field name="number" />
                    <field name="expedition_date" />
                    <field name="effective_date" />
                    <field name="amount" />
                    <field name="rate" />
                    <field name="partner_id" />
                </tree>
            </field>
        </record>

    </data>
</odoo>

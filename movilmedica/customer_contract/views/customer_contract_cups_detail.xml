<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="customer_contract_cups_detail_form" model="ir.ui.view">
            <field name="name">customer.contract.cups.detail.form</field>
            <field name="model">customer.contract.cups.detail</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_general" col="4">
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="own_amount" />
                            <field name="soat_amount" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_contract_cups_detail_tree" model="ir.ui.view">
            <field name="name">customer.contract.cups.detail.tree</field>
            <field name="model">customer.contract.cups.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="own_amount" />
                    <field name="soat_amount" />
                </tree>
            </field>
        </record>

    </data>
</odoo>

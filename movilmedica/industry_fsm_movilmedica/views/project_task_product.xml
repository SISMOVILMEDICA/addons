<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="project_task_product_form" model="ir.ui.view">
            <field name="name">project.task.product.form</field>
            <field name="model">project.task.product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="task_id" readonly="1"/>
                        </h1>
                        <group>
                            <field name="product_id"/>
                            <field name="price"/>
                            <field name="quantity"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_task_product_tree" model="ir.ui.view">
            <field name="name">project.task.product.tree</field>
            <field name="model">project.task.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="price"/>
                    <field name="quantity"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>

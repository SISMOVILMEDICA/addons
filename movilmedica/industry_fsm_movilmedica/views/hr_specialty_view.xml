<odoo>
    <data>
        <record id="view_hr_specialty_form" model="ir.ui.view">
            <field name="name">view.hr.specialty.form</field>
            <field name="model">hr.specialty</field>
            <field name="inherit_id" ref="hr_contract_users.view_hr_specialty_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group1']" position="after">
                    <group name="group2">
                        <field name="action_char" required="True"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
